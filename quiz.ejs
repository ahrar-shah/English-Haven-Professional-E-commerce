<!doctype html><html><head><meta charset="utf-8"/><meta name="viewport" content="width=device-width, initial-scale=1"/>
<title>Quiz â€” English Haven</title><link rel="stylesheet" href="/style.css"/><script src="/main.js" defer></script></head><body onload="startQuiz('<%= quiz.id %>')">
<header><div class="brand"><div class="logo"></div><h1>Quiz: <%= quiz.title %></h1></div></header>
<div class="grid" style="max-width:900px">
  <div class="card">
    <form method="post" action="/quiz/<%= quiz.id %>/submit">
      <% quiz.questions.forEach((q, idx)=>{ %>
        <div class="field">
          <label><%= idx+1 %>. <%= q.text %></label>
          <% if (q.options && q.options.length){ %>
            <select name="q<%= idx %>">
              <% q.options.forEach(opt=>{ %><option><%= opt %></option><% }) %>
            </select>
          <% } else { %>
            <input name="q<%= idx %>" placeholder="Your answer"/>
          <% } %>
        </div>
      <% }) %>
      <button class="btn cta">Submit</button>
    </form>
  </div>
  <div class="card small">If you switch tabs, one try may be deducted by admin discretion.</div>
  <div class="card small">Online class at WhatsApp number: +92 322 2694045</div>
</div>
<a class="whatsapp" href="https://wa.me/923222694045" target="_blank">WhatsApp us: +92 322 2694045</a>
</body></html>
